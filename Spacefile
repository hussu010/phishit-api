v: 0
micros:
  - name: phishit-api
    src: .
    engine: nodejs16
    primary: true
    public: true
    dev: "npm run dev"
    commands:
      - npm run build
    include:
      - dist
      - node_modules
    run: "node dist/server.js"
    presets:
      env:
        - name: MONGO_URI
          description: Mongo Uri to connect to mongo database
        - name: JWT_SECRET_KEY
          description: Secret key to sign jwt tokens
        - name: SENTRY_DSN
          description: Sentry DSN to send errors to sentry
        - name: SMS_API_KEY
          description: API key to send sms
        - name: GOOGLE_CLIENT_ID
          description: Google client id to verify google tokens
        - name: GOOGLE_CLIENT_SECRET
          description: Google client secret to verify google tokens
